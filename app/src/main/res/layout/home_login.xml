<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/wallpaper"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginBottom="90dp"
                android:gravity="top">


                <ImageButton
                    android:id="@+id/displayMenu"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginRight="200dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:maxWidth="60dp"
                    android:maxHeight="60dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/display" />

                <ImageButton
                    android:id="@+id/profile"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:maxWidth="60dp"
                    android:maxHeight="60dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/profile" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <ImageView
                    android:id="@+id/DniCards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="145dp"
                    android:maxHeight="95dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/picdnicard" />

                <ImageView
                    android:id="@+id/CreditCards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:maxWidth="145dp"
                    android:maxHeight="95dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/piccreditcard" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/TransportCards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:maxWidth="145dp"
                    android:maxHeight="95dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/baseline_star_24" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="240dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/helpBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="40dp"
                    android:adjustViewBounds="true"
                    android:maxWidth="60dp"
                    android:maxHeight="60dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/help" />

                <ImageButton
                    android:id="@+id/addCard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:maxWidth="220dp"
                    android:maxHeight="180dp"
                    android:onClick="showMenu"
                    android:scaleType="fitCenter"
                    android:src="@drawable/add" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigation_drawer"
        android:layout_width="240dp"
        android:layout_marginTop="80dp"
        android:layout_height="460dp"
        android:background="@drawable/rounded_bg"
        android:layout_gravity="start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/menu_item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AÃ±adir tarjeta"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingTop="50dp"
            android:paddingLeft="16dp"/>

        <TextView
            android:id="@+id/menu_item2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Eliminar tarjeta"
            android:padding="16dp" />

    </LinearLayout>
</androidx.drawerlayout.widget.DrawerLayout>