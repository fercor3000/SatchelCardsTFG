<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/go_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:adjustViewBounds="true"
                android:maxWidth="40dp"
                android:maxHeight="40dp"
                android:scaleType="fitCenter"
                android:src="@drawable/goback" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dni_titulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Nuevo DNI:"
                android:textColor="#232e63"
                android:textSize="30sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewPhoto"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_gravity="left"
            android:src="@drawable/baseline_credit_card_off_24"/>

        <!-- EditText para el nombre -->
        <Button
            android:id="@+id/dni_btn_add_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:backgroundTint="@color/darkBlue"
            android:text="Seleccionar imagen" />

        <EditText
            android:id="@+id/dni_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"
            android:padding="16dp" />

        <!-- EditText para los apellidos -->
        <EditText
            android:id="@+id/dni_apellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Apellidos"
            android:padding="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- EditText para el sexo -->
            <EditText
                android:id="@+id/dni_sexo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Sexo (M/H)"
                android:padding="16dp" />

            <!-- EditText para la nacionalidad -->
            <EditText
                android:id="@+id/dni_nacionalidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Nacionalidad"
                android:padding="16dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- EditText para el Num Soport -->
            <EditText
                android:id="@+id/dni_num_soport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Num Soport"
                android:padding="16dp" />

            <!-- EditText para la CAN -->
            <EditText
                android:id="@+id/dni_can"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="CAN              "
                android:padding="16dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/dni_dni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DNI"
            android:padding="16dp" />

        <EditText
            android:id="@+id/dni_equipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Equipo"
            android:padding="16dp" />

        <EditText
            android:id="@+id/dni_provincia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Provincia "
            android:padding="16dp" />

        <EditText
            android:id="@+id/dni_domicilio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Domicilio "
            android:padding="16dp" />

        <EditText
            android:id="@+id/dni_lugar_nacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Lugar de Nacimiento "
            android:padding="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- EditText para el Nombre del padre -->
            <EditText
                android:id="@+id/dni_nombre_padre"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:hint="Nombre del Padre"
                android:padding="16dp" />

            <!-- EditText para la nombre de la madre -->
            <EditText
                android:id="@+id/dni_nombre_madre"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Nombre de la Madre"
                android:padding="16dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Fecha de nacimiento: "
            android:textColor="#232e63"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- DatePicker para seleccionar la fecha de nacimiento -->
        <DatePicker
            android:id="@+id/dni_FechaNacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Fecha de validez: "
            android:textColor="#232e63"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- DatePicker para seleccionar la fecha de validez -->
        <DatePicker
            android:id="@+id/dni_FechaValidez"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:datePickerMode="spinner" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:text="Acerque su tarjeta de crédito"
            android:textColor="#232e63"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="right"/>
        <ImageView
            android:id="@+id/nfc_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/nfc_logo"
            android:layout_gravity="right"/>

        <!-- Botón para guardar -->
        <Button
            android:id="@+id/btn_guardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/darkBlue"
            android:padding="16dp"
            android:text="GUARDAR"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>
